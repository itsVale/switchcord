# Editor configuration file, for documentation visit: https://editorconfig.org/
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
tab_width = 2
indent_size = 2
indent_style = space
insert_final_newline = false

[*{CMakeLists.txt, .cmake}]
indent_size = 4
max_line_length = 80

[Makefile]
indent_style = tab
